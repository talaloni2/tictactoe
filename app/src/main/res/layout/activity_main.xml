<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1" />

    <ImageView
        android:id="@+id/slot11"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot12"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/slot11"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot13"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/slot12"
        app:layout_constraintTop_toTopOf="@id/background"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot21"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toBottomOf="@id/slot11"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot22"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/slot21"
        app:layout_constraintTop_toBottomOf="@id/slot12"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot23"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/slot22"
        app:layout_constraintTop_toBottomOf="@id/slot13"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot31"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toBottomOf="@id/slot21"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot32"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/slot31"
        app:layout_constraintTop_toBottomOf="@id/slot22"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/slot33"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/empty"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintStart_toEndOf="@id/slot32"
        app:layout_constraintTop_toBottomOf="@id/slot23"
        app:layout_constraintWidth_percent="0.33" />

    <ImageView
        android:id="@+id/winVertical"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:scaleX="3"
        android:src="@drawable/mark4"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/slot11"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        android:visibility="invisible"/>

    <!--    When moving this Image, move layout_constraintBottom_toBottomOf, layout_constraintTop_toTopOf to first digit representing line-->
    <ImageView
        android:id="@+id/winHorizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rotation="90"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@drawable/mark4"
        app:layout_constraintBottom_toBottomOf="@id/slot11"
        app:layout_constraintEnd_toEndOf="@id/slot13"
        app:layout_constraintStart_toStartOf="@id/slot11"
        app:layout_constraintTop_toTopOf="@id/slot11"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/winLTRSlash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/mark1"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/winRTLSlash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/mark2"
        app:layout_constraintBottom_toBottomOf="@id/background"
        app:layout_constraintEnd_toEndOf="@id/background"
        app:layout_constraintStart_toStartOf="@id/background"
        app:layout_constraintTop_toTopOf="@id/background"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/turn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/xplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/background"
        app:layout_constraintWidth_percent="1" />

    <Button
        android:id="@+id/play_again"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:text="@string/play_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/turn"
        app:layout_constraintWidth_percent="1" />


</androidx.constraintlayout.widget.ConstraintLayout>